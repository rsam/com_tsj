<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_tsj/models/rules">
	<fieldset name="gazparams" label="COM_TSJ_CONFIG_GAZ_GREETING_SETTINGS_LABEL"
		description="COM_TSJ_CONFIG_GAZ_GREETING_SETTINGS_DESC">
		<field name="gaz_show_rows_sn" type="checkbox" label="COM_TSJ_CONFIG_GAZ_SN_LABEL"
			description="COM_TSJ_CONFIG_GAZ_FIELD_SHOW_CATEGORY_DESC" value="1">
		</field>
		<field name="gaz_show_rows_gaz" type="checkbox"
			label="COM_TSJ_CONFIG_GAZ_CONSUMPTION" description="COM_TSJ_CONFIG_GAZ_FIELD_SHOW_CATEGORY_DESC"
			value="1">
		</field>
		<field name="gaz_startDay" type="integer" first="1" last="31"
			step="1" default="1" label="COM_TSJ_CONFIG_GAZ_START_DAY_NAME"
			description="COM_TSJ_CONFIG_GAZ_START_DAY_NAME_DESC" filter="integer" />
		<field name="gaz_stopDay" type="integer" first="1" last="31"
			step="1" default="5" label="COM_TSJ_CONFIG_GAZ_STOP_DAY_NAME"
			description="COM_TSJ_CONFIG_GAZ_STOP_DAY_NAME_DESC" filter="integer" />
		<field name="gaz_linksn" type="text" default="" size="80"
			maxlength="100" label="COM_TSJ_CONFIG_GAZ_SNPAGE_LINC_NAME" description="COM_TSJ_CONFIG_GAZ_SNPAGE_LINC_NAME_DESC" />
	</fieldset>

	<fieldset name="gazparams1" label="COM_TSJ_CONFIG_GREETING_SETTINGS_LABEL1"
		description="COM_TSJ_CONFIG_GREETING_SETTINGS_DESC1">
		<field name="gaz_prefix_text" label="COM_TSJ_CONFIG_GAZ_GREETING_LABEL"
			type="editor" width="300" filter="safehtml" />
	</fieldset>

	<fieldset name="gazparams2" label="COM_TSJ_CONFIG_GREETING_SETTINGS_LABEL2"
		description="COM_TSJ_CONFIG_GREETING_SETTINGS_DESC2">
		<field name="gaz_notice_third" type="integer" first="0" last="120"
			step="1" default="30" label="COM_TSJ_CONFIG_THIRD_NOTICE_NAME"
			description="COM_TSJ_CONFIG_THIRD_NOTICE_NAME_DESC" filter="integer" />
		<field name="gaz_notice_second" type="integer" first="0" last="120"
			step="1" default="60" label="COM_TSJ_CONFIG_SECOND_NOTICE_NAME"
			description="COM_TSJ_CONFIG_SECOND_NOTICE_NAME_DESC" filter="integer" />
		<field name="gaz_notice_first" type="integer" first="0" last="120"
			step="1" default="0" label="COM_TSJ_CONFIG_FIRST_NOTICE_NAME"
			description="COM_TSJ_CONFIG_FIRST_NOTICE_NAME_DESC" filter="integer" />
	</fieldset>
</form>